{% extends 'base.html.twig' %}


{% block body %}
<div class="container">
    <main>
          <div class="py-5 text-center">
    <h1 class="text-body-emphasis">CRUD</h1>
    <p">Create Read Update Delete</p>

    <div class="mb-5">
      <a href="{{ path('create') }}" class="btn btn-primary btn-lg px-4">Create</a>
    </div>
    {%  for message in app.flashes('notice') %}
        <div class="alert alert-success mt-4 mb-b">
            {{ message }}
        </div>
    {% endfor %}

    <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Content</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
        {% for data in list %}
          <tr>
            <th scope="row">{{ data.id }}</th>
            <td>{{ data.title }}</td>
            <td>{{ data.content }}</td>
            <td>
                <a class="btn btn-warning" href="{{ path('update', {'id': data.id }) }}">Update</a>
                <a class="btn btn-danger" href="{{ path('delete', {'id': data.id }) }}">Delete</a>
            </td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
  </main>
</div>
</div>
{% endblock %}
